<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cmb.logistics.Pages.LoginPage"
             Title="Login">
    <VerticalStackLayout Padding="20" Spacing="12">
        <Label Text="Connexion" FontSize="24"/>
        <Entry x:Name="UserEntry" Placeholder="Utilisateur" />
        <Entry x:Name="PassEntry" Placeholder="Mot de passe" IsPassword="True" />
        <Button Text="Se connecter" Clicked="OnLoginClicked" />
        <Label x:Name="StatusLabel" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>